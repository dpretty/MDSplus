SHELL=/bin/sh
CC=@CC@
top_srcdir=@top_srcdir@
prefix=@prefix@
exec_prefix=@exec_prefix@
X_CFLAGS=@X_CFLAGS@
CFLAGS=@CFLAGS@ $(X_CFLAGS)
LDFLAGS=@LDFLAGS@
LIBS=@LIBS@
UIL=@UIL@
X_LIBS=@X_LIBS@
X_EXTRA_LIBS=@X_EXTRA_LIBS@
X_PRE_LIBS=@X_PRE_LIBS@
INSTALL=@top_srcdir@/conf/install-sh -c
MOTIF_LIBS = @MOTIF_LDARC@ @XM_LIBS@ @MOTIF_LDSHARE@ @LIBXP@ @LIBXEXT@
MLIBS = $(X_LIBS) $(MOTIF_LIBS) $(X_PRE_LIBS) -lXt -lX11 $(X_EXTRA_LIBS) $(LIBS)

SOURCES = \
	main-uil.c \
	bxutils-uil.c \
	CallbacksUil.c \
        ReadInt.c \
        ReadString.c \
        GetNciString.c \
        GetSupportedDevices.c

OBJECTS = $(SOURCES:.c=.o)

all : @MAKEBINDIR@ \
@MAKEBINDIR@traverser \
@MAKEUIDDIR@ \
@MAKEUIDDIR@traverser.uid \
$(top_srcdir)/man/man1 \
$(top_srcdir)/man/man1/traverser.1.gz

depend:
	@makedepend -- $(CFLAGS) -- $(SOURCES)

clean :
	- rm *.o
	- rm @MAKEBINDIR@traverser
	- rm @MAKEUIDDIR@traverser.uid


install:
	$(INSTALL) -m 644  @MAKEUIDDIR@traverser.uid @uiddir@
	$(INSTALL) -m 755  @MAKEBINDIR@traverser @bindir@
	$(INSTALL) -m 755  $(top_srcdir)/man/man1/traverser.1.gz $(exec_prefix)/man/man1

$(exec_prefix)/man/man1 :
	mkdirhier $@

@MAKEBINDIR@traverser : $(OBJECTS)
	 $(CC) -o $@ $(CFLAGS) $(OBJECTS) -L@MAKELIBDIR@ -lXmdsShr -lMdsdcl -lTdiShr -lTreeShr -lMdsShr $(MLIBS) $(LIBS)

@MAKEBINDIR@ :
	mkdir @MAKEBINDIR@

@MAKEUIDDIR@ :
	mkdir @MAKEUIDDIR@

$(top_srcdir)/man/man1 :
	mkdirhier $@

$(top_srcdir)/man/man1/traverser.1.gz : traverser.groff
	groff -t -man -Tascii traverser.groff > $(top_srcdir)/man/man1/traverser.1
	gzip $(top_srcdir)/man/man1/traverser.1

@MAKEUIDDIR@traverser.uid : traverser.uil
	$(UIL) -o $@ traverser.uil
