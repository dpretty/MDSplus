CFLAGS = -c -I../include -I. -g -assume noaligned_objects

OBJECTS = \
	MdsGet1DxA.o \
	MdsGet1DxS.o \
	MdsXdRoutines.o \
	MdsCmprs.o \
	MdsPk.o \
	MdsCompareXd.o \
	MdsCompress.o \
	librtl.o

libMdsShr.so : $(OBJECTS)
	$(LD) -o $@ -shared -no_archive $(OBJECTS) -lc -lm -lots

clean :
	- rm *.o
	- rm so_locations
	- rm *.so
	- rm .depend

depend : .depend

.depend :
	- rm .depend
	find *.c -exec cc -I../include -M {} > .depend \;

include .depend

