SHELL=/bin/sh
CC=@CC@
LD=@LD@
top_srcdir=@top_srcdir@
RM=$(top_srcdir)/devscripts/rm_if
prefix=@prefix@
exec_prefix=@exec_prefix@
CFLAGS=@CFLAGS@ @JDK_CFLAGS@
LDFLAGS=@LDFLAGS@
LIBS=@JVM@ @LIBS@
INSTALL=@top_srcdir@/conf/install-sh -c

SOURCES = javamds.c ServerSupport.c JavaData.c JavaTrav.c
OBJECTS = $(SOURCES:.c=.o)
EXPORTS = javamds.export

all: 	@MAKELIBDIR@ @MAKELIBDIR@libJavaMds@SHARETYPE@

depend:
	@makedepend -- $(CFLAGS) -- $(SOURCES)

clean:
	@ $(RM) $(CLASSES)
	@ $(RM) $(OBJECTS)
	@ $(RM) so_locations
	@ $(RM) @MAKELIBDIR@libJavaMds@SHARETYPE@


install:
	if [ ! -d @libdir@ ] ; then \
                mkdir @libdir@; \
                chmod 755 @libdir@; \
        fi;
	$(INSTALL) -m 755  @MAKELIBDIR@libJavaMds@SHARETYPE@ @libdir@

@MAKELIBDIR@libJavaMds@SHARETYPE@ : $(OBJECTS) 
	$(LD) -o $@ @LINKSHARED@ $(OBJECTS) -L@MAKELIBDIR@ -lMdsShr -lTreeShr -lTdiShr $(LIBS)

@MAKELIBDIR@ :
	mkdir @MAKELIBDIR@
