*86*linux*) 
       CFLAGS="$CFLAGS -fpic -fno-strict-aliasing";
       FORLD="g77";
       if ( uname -m | grep 64 > /dev/null ) 
       then
         if ( echo $target | grep 64 > /dev/null )
         then
           SYB64="64"
           CFLAGS="$CFLAGS -m64";
           LD="ld -m elf_x86_64 --oformat elf64-x86-64 --no-warn-mismatch"
	   FFLAGS="$FFLAGS -m64";
