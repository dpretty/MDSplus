SHELL=/bin/sh
CC=@CC@
top_srcdir=@top_srcdir@
prefix=@prefix@
exec_prefix=@exec_prefix@

all : $(top_srcdir)/man/man1 \
      $(top_srcdir)/man/man1/mdsplus.1.gz \
      $(top_srcdir)/man/man1/traverser.1.gz

depend:
	@ :

clean :
	- rm -R $(top_srcdir)/man

install: 
	- mkdirhier $(exec_prefix)/man/man1
	$(INSTALL) -m 755  $(top_srcdir)/man/man1/traverser.1.gz $(exec_prefix)/man/man1


$(top_srcdir)/man/man1 :
	mkdirhier $@

$(top_srcdir)/man/man1/traverser.1.gz : traverser.groff
	groff -t -man -Tascii traverser.groff > $(top_srcdir)/man/man1/traverser.1
	gzip -f $(top_srcdir)/man/man1/traverser.1

$(top_srcdir)/man/man1/mdsplus.1.gz : mdsplus.groff
	groff -t -man -Tascii mdsplus.groff > $(top_srcdir)/man/man1/mdsplus.1
	gzip -f $(top_srcdir)/man/man1/mdsplus.1
