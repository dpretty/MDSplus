SHELL=/bin/sh
CC=@CC@
top_srcdir=@top_srcdir@
exec_prefix=@exec_prefix@
X_CFLAGS=@X_CFLAGS@
CFLAGS=@CFLAGS@ $(X_CFLAGS)
LDFLAGS=@LDFLAGS@
LIBS=@LIBS@
UIL=@UIL@
X_LIBS=@X_LIBS@
X_EXTRA_LIBS=@X_EXTRA_LIBS@
X_PRE_LIBS=@X_PRE_LIBS@
INSTALL=@top_srcdir@/conf/install-sh -c
MOTIF_LIBS = @XM_LIBS@
MLIBS = $(MOTIF_LIBS) $(X_PRE_LIBS) -lXt -lX11 $(X_EXTRA_LIBS) $(LIBS)

SOURCES = actions.c
OBJECTS = $(SOURCES:.c=.o)

all : @MAKEBINDIR@actions @MAKEUIDDIR@actions.uid

depend:
	@makedepend -- $(CFLAGS) -- $(SOURCES)

clean :
	- rm *.o
	- rm @MAKEBINDIR@actions
	- rm @MAKEUIDDIR@actions.uid
	- rm .depend

install:
	if [ ! -d @libdir@ ] ; then \
                mkdir @libdir@; \
                chmod 755 @libdir@; \
        fi;
	$(INSTALL) -m 755  @MAKEBINDIR@actions @bindir@
	$(INSTALL) -m 644  @MAKEUIDDIR@actions.uid @uiddir@

@MAKEBINDIR@actions : $(OBJECTS) @MAKEBINDIR@
	 $(CC) -o $@ $(OBJECTS)  -L@MAKELIBDIR@ -lXmdsShr -lTdiShr -lTreeShr -lMdsShr $(MLIBS) $(LIBS)

@MAKEBINDIR@ :
	mkdir @MAKEBINDIR@

@MAKEUIDDIR@actions.uid : actions.uil
	$(UIL) -o $@ actions.uil
