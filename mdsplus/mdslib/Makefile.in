SHELL=/bin/sh
CC=@CC@
FC=@F77@
LD=@LD@
top_srcdir=@top_srcdir@
RM=$(top_srcdir)/devscripts/rm_if
prefix=@prefix@
exec_prefix=@exec_prefix@
CFLAGS=@CFLAGS@
FFLAGS=@FFLAGS@
LDFLAGS=@LDFLAGS@
LIBS=@LIBS@ @LIBSOCKET@ @LIBNSL@ @LIBRESOLV@ @LIBPTHREAD@
MDSLIB_LIBS=-lTdiShr -lTreeShr -lMdsShr
INSTALL=@top_srcdir@/conf/install-sh -c

SOURCES = MdsLib.c
OBJECTS = $(SOURCES:.c=.o) 

OBJECTS_CLIENT = MdsLib_client.o 
OBJECTS_CLIENT_ARCHIVE = ../mdstcpip/mdsiputil.o

all: @MAKEBINDIR@ @MAKELIBDIR@ \
         @MAKELIBDIR@libMdsLib@SHARETYPE@ \
         @MAKELIBDIR@libMdsLib_client@SHARETYPE@ \
         @MAKELIBDIR@libMdsLib_client.a \
         @MAKELIBDIR@libMdsLib.a @MAKEBINDIR@mdslib_ctest  \
         @MAKEBINDIR@mdslib_ftest  @MAKEBINDIR@mdslib_fremotetest \
	 @MAKEBINDIR@dtype_test

depend:
	@makedepend -- $(CFLAGS) -- $(SOURCES)

clean:
	@ $(RM) $(OBJECTS) $(OBJECTS_CLIENT) mdslib_ftest.o
	@ $(RM) so_locations
	@ $(RM) @MAKELIBDIR@libMdsLib_client@SHARETYPE@
	@ $(RM) @MAKELIBDIR@libMdsLib_client.a
	@ $(RM) @MAKELIBDIR@libMdsLib@SHARETYPE@
	@ $(RM) @MAKELIBDIR@libMdsLib.a
	@ $(RM) @MAKEBINDIR@/mdslib_*test
	@ $(RM) @MAKEBINDIR@dtype_test

install:
	if [ ! -d @libdir@ ] ; then \
                mkdir @libdir@; \
                chmod 755 @libdir@; \
        fi;
	$(INSTALL) -m 644  @MAKELIBDIR@libMdsLib_client.a @libdir@
	$(INSTALL) -m 755  @MAKELIBDIR@libMdsLib_client@SHARETYPE@ @libdir@
	$(INSTALL) -m 644  @MAKELIBDIR@libMdsLib.a @libdir@
	$(INSTALL) -m 755  @MAKELIBDIR@libMdsLib@SHARETYPE@ @libdir@

@MAKEBINDIR@ :
	mkdir @MAKEBINDIR@

@MAKELIBDIR@libMdsLib@SHARETYPE@ : $(OBJECTS)
	$(LD) -o $@ @LINKSHARED@ $(OBJECTS) -L@MAKELIBDIR@ -lMdsIpUtil $(MDSLIB_LIBS) $(LIBS)

@MAKELIBDIR@libMdsLib.a : $(OBJECTS)
	$(AR) -cr $@ $(OBJECTS)
	@RANLIB@ $@

@MAKELIBDIR@libMdsLib_client@SHARETYPE@ : $(OBJECTS_CLIENT)
	$(LD) -o $@ @LINKSHARED@ $(OBJECTS_CLIENT) -L@MAKELIBDIR@ -lMdsIpUtil $(LIBS) @MEMCHKLIB@

@MAKELIBDIR@libMdsLib_client.a : $(OBJECTS_CLIENT) $(OBJECTS_CLIENT_ARCHIVE)
	$(AR) -cr $@ $(OBJECTS_CLIENT) $(OBJECTS_CLIENT_ARCHIVE)

MdsLib_client.o : MdsLib.c
	$(CC) -o $@ -c $(CFLAGS) MdsLib.c -D_CLIENT_ONLY

@MAKELIBDIR@ :
	mkdir @MAKELIBDIR@

@MAKEBINDIR@mdslib_ctest : mdslib_ctest.c
	$(CC) -o $@ $(CFLAGS) mdslib_ctest.c -L@MAKELIBDIR@ -lMdsLib $(MDSLIB_LIBS) $(LIBS) @LIBM@

@MAKEBINDIR@mdslib_ftest : mdslib_ftest.o
	$(FC) -o $@ $(FFLAGS) mdslib_ftest.f @FEXECLIBDIR@@MAKELIBDIR@ -lMdsLib $(MDSLIB_LIBS) $(LIBS)

@MAKEBINDIR@mdslib_fremotetest : mdslib_fremotetest.f
	$(FC) -o $@ $(FFLAGS) mdslib_fremotetest.f @FEXECLIBDIR@@MAKELIBDIR@ -lMdsLib $(MDSLIB_LIBS) $(LIBS)

@MAKEBINDIR@dtype_test : dtype_test.c
	$(CC) -o $@ $(CFLAGS) dtype_test.c -L@MAKELIBDIR@ -lMdsLib $(MDSLIB_LIBS) $(LIBS)

