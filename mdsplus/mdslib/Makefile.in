SHELL=/bin/sh
CC=@CC@
FC=@F77@
LD=@LD@
top_srcdir=@top_srcdir@
prefix=@prefix@
exec_prefix=@exec_prefix@
CFLAGS=@CFLAGS@
FFLAGS=@FFLAGS@
LDFLAGS=@LDFLAGS@
LIBS=@LIBS@
INSTALL=@top_srcdir@/conf/install-sh -c

SOURCES = MdsLib.o
OBJECTS = $(SOURCES:.c=.o)

OBJECTS_CLIENT = MdsLib_client.o

all: @MAKEBINDIR@ @MAKELIBDIR@ \
         @MAKELIBDIR@libMdsLib@SHARETYPE@ \
         @MAKELIBDIR@libMdsLib_client@SHARETYPE@ \
         @MAKELIBDIR@libMdsLib_client.a \
         @MAKELIBDIR@libMdsLib.a @MAKEBINDIR@mdslib_ctest  \
         @MAKEBINDIR@mdslib_ftest  @MAKEBINDIR@mdslib_fremotetest

depend:
	@makedepend -- $(CFLAGS) -- $(SOURCES)

clean:
	- rm *.o
	- rm @MAKELIBDIR@libMdsLib_client@SHARETYPE@
	- rm @MAKELIBDIR@libMdsLib_client.a
	- rm @MAKELIBDIR@libMdsLib@SHARETYPE@
	- rm @MAKELIBDIR@libMdsLib.a
	- rm @MAKELIBDIR@mdslib_?test
	- rm @MAKELIBDIR@mdslib_?remotetest

install:
	if [ ! -d @libdir@ ] ; then \
                mkdir @libdir@; \
                chmod 755 @libdir@; \
        fi;
	$(INSTALL) -m 644  @MAKELIBDIR@libMdsLib_client.a @libdir@
	$(INSTALL) -m 755  @MAKELIBDIR@libMdsLib_client@SHARETYPE@ @libdir@
	$(INSTALL) -m 644  @MAKELIBDIR@libMdsLib.a @libdir@
	$(INSTALL) -m 755  @MAKELIBDIR@libMdsLib@SHARETYPE@ @libdir@

@MAKEBINDIR@ :
	mkdir @MAKEBINDIR@

@MAKELIBDIR@libMdsLib@SHARETYPE@ : $(OBJECTS)
	$(LD) -o $@ @LINKSHARED@ $(OBJECTS) -L@MAKELIBDIR@ -lMdsIpUtil -lTdiShr -lTreeShr -lMdsShr $(LIBS)

@MAKELIBDIR@libMdsLib.a : $(OBJECTS)
	$(AR) -cr $@ $(OBJECTS)
	@RANLIB@ $@

@MAKELIBDIR@libMdsLib_client@SHARETYPE@ : $(OBJECTS_CLIENT)
	$(LD) -o $@ @LINKSHARED@ $(OBJECTS_CLIENT) -L@MAKELIBDIR@ -lMdsIpUtil $(LIBS)

@MAKELIBDIR@libMdsLib_client.a : $(OBJECTS_CLIENT)
	$(AR) -cr $@ $(OBJECTS_CLIENT)

MdsLib_client.o : MdsLib.c
	$(CC) -o $@ -c $(CFLAGS) MdsLib.c -D_CLIENT_ONLY

@MAKELIBDIR@ :
	mkdir @MAKELIBDIR@

@MAKEBINDIR@mdslib_ctest : mdslib_ctest.c
	$(CC) -o $@ $(CFLAGS) mdslib_ctest.c -L@MAKELIBDIR@ -lMdsLib $(LIBS)

@MAKEBINDIR@mdslib_ftest : mdslib_ftest.f 
	$(FC) -o $@ $(FFLAGS) mdslib_ftest.f -Wl,-L@MAKELIBDIR@ -lMdsLib -lTreeShr $(LIBS)

@MAKEBINDIR@mdslib_fremotetest : mdslib_fremotetest.f
	$(FC) -o $@ $(FFLAGS) mdslib_fremotetest.f -Wl,-L@MAKELIBDIR@ -lMdsLib $(LIBS)

