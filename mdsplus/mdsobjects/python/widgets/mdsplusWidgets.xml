<?xml version="1.0" encoding="UTF-8"?>
<glade-catalog name="MDSplus Widgets" library="MDSplus.widgets" domain="glade-3" depends="gtk+"  language="python">
    <glade-widget-classes>
        <glade-widget-class
            title="MDSplus Expression"
            name="MDSplusExpr"
            icon-name="textview"
            generic-name="MDSplusExpr">
            <properties>
              <property save="True" query="False" id="nidOffset" default="-1" name="nidOffset">
                   <spec>glade_standard_int_spec</spec>
                   <tooltip>The offset from the head node of a device</tooltip>
              </property>
              <property save="True" query="False" id="putOnApply" default="True" name="putOnApply">
                   <spec>glade_standard_boolean_spec</spec>
                   <tooltip>If true, apply event will compile and store the value</tooltip>
              </property>
            </properties>
        </glade-widget-class>
        <glade-widget-class
            title="MDSplus Path"
            name="MDSplusPathWidget"
            icon-name="textview"
            generic-name="MDSplusPathWidget">
            <properties>
              <property save="True" query="False" id="nidOffset" default="-1" name="nidOffset">
                   <spec>glade_standard_int_spec</spec>
                   <tooltip>The offset from the head node of a device. Not necessary if widget name matches device part name.</tooltip>
              </property>
              <property save="True" query="False" id="useFullPath" default="False" name="useFullPath">
                   <spec>glade_standard_boolean_spec</spec>
                   <tooltip>If true, use full path name otherwise use minimum path name.</tooltip>
              </property>
            </properties>
        </glade-widget-class>
        <glade-widget-class
            title="MDSplus OnOff"
            name="MDSplusOnOff"
            icon-name="textview"
            generic-name="MDSplusOnOff">
            <properties>
              <property save="True" query="False" id="nidOffset" default="-1" name="nidOffset">
                   <spec>glade_standard_int_spec</spec>
                   <tooltip>The offset from the head node of a device</tooltip>
              </property>
              <property save="True" query="False" id="putOnApply" default="True" name="putOnApply">
                   <spec>glade_standard_boolean_spec</spec>
                   <tooltip>If true, apply event will compile and store the value</tooltip>
              </property>
            </properties>
        </glade-widget-class>
        <glade-widget-class
            title="MDSplus Ok Buttons"
            name="MDSplusOkButtons"
            icon-name="hbuttonbox"
            generic-name="MDSplusOkButtons">
            <properties>
            </properties>
        </glade-widget-class>
    </glade-widget-classes>
    <glade-widget-group name="MDSplus Widgets"
        title="MDSplus Widgets">
        <glade-widget-class-ref name="MDSplusOkButtons"/>
        <glade-widget-class-ref name="MDSplusOnOff"/>
        <glade-widget-class-ref name="MDSplusExpr"/>
        <glade-widget-class-ref name="MDSplusPathWidget"/>
    </glade-widget-group>
</glade-catalog>
