CFLAGS = -c +z -Ae  -Wl,+b,. -Wl,+s -woff 513 -D__irix__ -D_big_endian -I../include -I. -g 

OBJECTS = \
dummies.o \
TreeAddNode.o \
TreeFindNode.o \
TreeGetDbi.o \
TreeGetNci.o \
TreeGetRecord.o \
TreeOpen.o \
TreePutRecord.o \
TreeSetDefault.o \
TreeSetNci.o \
RemoteAccess.o

all : .depend
	make -f Makefile.IRIX -f .depend ../shlib/libTreeShr.so

../shlib/libTreeShr.so : $(OBJECTS) ../shlib
	ld -shared -o $@ $(OBJECTS) -lc -L../shlib -lMdsShr
	rm so_locations

../shlib :
	mkdir ../shlib

clean :
	- rm *.o
	- rm ../shlib/libTreeShr.so
	- rm .depend
	- rm so_locations

depend : .depend

.depend :
	- rm .depend
	find *.c -exec cc -I../include -M {} > .depend \;

