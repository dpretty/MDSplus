SHELL=/bin/sh
LD=@LD@
FC=@F77@
top_srcdir=@top_srcdir@
RM=$(top_srcdir)/devscripts/rm_if
prefix=@prefix@
exec_prefix=@exec_prefix@
FFLAGS=@FFLAGS@
LDFLAGS=@LDFLAGS@
LIBS=@LIBS@ @LIBM@
INSTALL=@top_srcdir@/conf/install-sh -c

SOURCES = \
	caxpy.f \
	cgeco.f \
	cmul.f  \
	csint.f  \
	csval.f  \
	daxpy.f  \
	dcsint.f  \
	dcsval.f  \
	dgeco.f  \
	dmul.f  \
	dpermu.f  \
	dppval.f  \
	dsrch.f  \
	dsvrgn.f  \
	gn.f  \
	isrch.f  \
	permu.f  \
	ppval.f  \
	saxpy.f  \
	sgeco.f  \
	smul.f  \
	srch.f  \
	ssrch.f  \
	svign.f  \
	svrgn.f  \
	umach.f  \
	zaxpy.f  \
	zgeco.f  \
	zmul.f
         

OBJECTS = $(SOURCES:.f=.o) boxsmooth.o

all: @MAKELIBDIR@ @MAKELIBDIR@libMdsMath@SHARETYPE@ 

depend:
	@makedepend -- $(CFLAGS) -- $(SOURCES)

clean:
	@ $(RM) $(OBJECTS)
	@ $(RM) so_locations
	@ $(RM) @MAKELIBDIR@libMdsMath@SHARETYPE@

install:
	if [ ! -d @libdir@ ] ; then \
                mkdir @libdir@; \
                chmod 755 @libdir@; \
        fi;
	$(INSTALL) -m 755  @MAKELIBDIR@libMdsMath@SHARETYPE@ @libdir@

@MAKELIBDIR@libMdsMath@SHARETYPE@ : $(OBJECTS) 
	$(LD) -o $@ @LINKSHARED@ $(OBJECTS) -L@MAKELIBDIR@ -lMdsShr @FOR_LDFLAGS@ $(LIBS)

@MAKELIBDIR@ :
	mkdir @MAKELIBDIR@
