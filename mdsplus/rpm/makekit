#!/bin/sh
#
cd $HOME
rev=1.2
mkdir mdskit
cd mdskit
cvs -d :pserver:`whoami`@www.mdsplus.org:/mdsplus/repos -Q checkout mdsplus
mv mdsplus mdsplus-globus-$rev
find . -name CVS -exec rm -Rf {} \; 2> /dev/null
tar cf $HOME/rpm/SOURCES/mdsplus-$rev.tar mdsplus-globus-$rev 
gzip -f $HOME/rpm/SOURCES/mdsplus-$rev.tar
if (test "$GLOBUS_LOCATION" = "")
then
  rpm -ba mdsplus-$rev/rpm/mdsplus.rpm.spec
else
  rpm -ba mdsplus-globus-$rev/rpm/mdsplus-globus.rpm.spec
fi
cd $HOME
rm -Rf mdskit
