SHELL=/bin/sh
CC=@CC@
LD=@LD@
top_srcdir=@top_srcdir@
RM=$(top_srcdir)/devscripts/rm_if
prefix=@prefix@
exec_prefix=@exec_prefix@
CFLAGS=@CFLAGS@ @SYBASE_INC@ @IDL_INC@ 
LDFLAGS=@LDFLAGS@ @IDL_LIB@
LIBS=@SYBASE_LIB@ @IDL_LIB@ @LIBS@ @DNET_STUB@ @LIBSOCKET@
INSTALL=@top_srcdir@/conf/install-sh -c

SOURCES = \
dynamic_syb.c \
idlsql_syb.c \
user_syb.c

OBJECTS = $(SOURCES:.c=.o)
EXPORTS = IdlSql.export

all : @MAKELIBDIR@ @MAKELIBDIR@libIdlSql@SHARETYPE@ @MAKELIBDIR@libIdlSql.a

clean:
	@ $(RM) $(OBJECTS)
	@ $(RM) so_locations
	@ $(RM) @MAKELIBDIR@libIdlSql@SHARETYPE@
	@ $(RM) @MAKELIBDIR@libIdlSql.a

depend:
	 @makedepend -- $(CFLAGS) -- $(SOURCES)

install:
	if [ ! -d @libdir@ ] ; then \
                mkdir @libdir@; \
                chmod 755 @libdir@; \
        fi;
	$(INSTALL) -m 644  @MAKELIBDIR@libIdlSql.a @libdir@
	$(INSTALL) -m 755  @MAKELIBDIR@libIdlSql@SHARETYPE@ @libdir@

@MAKELIBDIR@libIdlSql@SHARETYPE@ : $(OBJECTS) 
	$(LD) -o $@ @LINKSHARED@ $(OBJECTS) -L@MAKELIBDIR@ $(LDFLAGS) $(LIBS)

@MAKELIBDIR@libIdlSql.a : $(OBJECTS)
	$(AR) -cr $@ $(OBJECTS)
	@RANLIB@ $@

@MAKELIBDIR@ :
	mkdir @MAKELIBDIR@
