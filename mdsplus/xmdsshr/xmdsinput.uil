module XmdsInput_UIL
    names = case_sensitive
    version = 
    "v1.0"

identifier data_offset;
           end_offset;
           idx_time_offset;
           start_offset;

value
    ct : color_table(background color = ' ', foreground color = '*');
    clock_pixmap: icon(color_table = ct,
        '                ',
        '     ******     ',
        '    *********   ',
        '   **   *   **  ',
        '  **         ** ',
        '  *       *   * ',
        ' **      *    **',
        ' ***    *    ***',
        ' **      *    **',
        '  *       *   * ',
        '  **       * ** ',
        '   **   *   **  ',
        '    *********   ',
        '      *****     ',
        '                ',
        '                ');
    number_pixmap: icon(color_table = ct,
        '                ',
        '                ',
        '                ',
        '                ',
        '    **    **    ',
        '    **    **    ',
        '  ************  ',
        '  ************  ',
        '    **    **    ',
        '  ************  ',
        '  ************  ',
        '    **    **    ',
        '    **    **    ',
        '                ',
        '                ',
        '                ');

object
    input_box: XmForm 
        {
        arguments
            {
            XmNborderWidth = 0;
            };
        controls
            {
            XmToggleButton onoff;
            XmToggleButton usetimes;
            XmdsExprField start_idx;
            XmdsExprField end_idx;
            XmLabel path;
            };
        };

    onoff: XmToggleButton 
        {
        arguments
            {
            XmNtopAttachment = XmATTACH_FORM;
            XmNleftAttachment = XmATTACH_FORM;
            XmNlabelString = 
            compound_string(" ");
            XmNleftOffset = 10;
            XmNuserData = data_offset;
            };
        };

    usetimes: XmToggleButton 
        {
        arguments
            {
            XmNtopAttachment = XmATTACH_FORM;
            XmNleftAttachment = XmATTACH_WIDGET;
            XmNleftWidget = XmToggleButton onoff;
            XmNleftOffset = 10;
            XmNlabelType = XmPIXMAP;
            XmNlabelPixmap = number_pixmap;
            XmNselectPixmap = clock_pixmap;
            XmNindicatorOn = false;
            XmNuserData = idx_time_offset;
            };
        };

    start_idx: XmdsExprField 
        {
        arguments
            {
            XmNtopAttachment = XmATTACH_FORM;
            XmNleftAttachment = XmATTACH_WIDGET;
            XmNleftWidget = XmToggleButton usetimes;
            XmNcolumns = 12;
            XmNleftOffset = 5;
            XmdsNnid = 0;
            XmdsNnidOffset = start_offset;
            };
        };

    end_idx: XmdsExprField 
        {
        arguments
            {
            XmNtopAttachment = XmATTACH_FORM;
            XmNleftAttachment = XmATTACH_WIDGET;
            XmNleftWidget = XmdsExprField start_idx;
            XmNcolumns = 12;
            XmNleftOffset = 3;
            XmdsNnid = 0;
            XmdsNnidOffset = end_offset;
            };
        };

    path: XmLabel 
        {
        arguments
            {
            XmNtopAttachment = XmATTACH_FORM;
            XmNleftAttachment = XmATTACH_WIDGET;
            XmNleftWidget = XmdsExprField end_idx;
            XmNleftOffset = 5;
            XmNuserData = data_offset;
            };
        };

end module;

