#@(#)$RCSfile: Makefile.in,v $ $Revision: 1.3 $
# @configure_input@
SHELL=/bin/sh

JAVA_APS = javamds \
	   javascope \
           javatraverser

PARTS = ipcs \
        mdsshr \
        treeshr \
        tdishr \
        tditest \
        xmdsshr \
        mdstcpip \
        dwscope \
        mitdevices \
        mdslibidl \
        remcam \
        cdu     \
        mdsdcl  \
        ccl     \
	servershr \
        tcl \
        traverser \
        actions \
        mdslib \
        math \
        @D3DSHR@ \
        wfevent \
	@JAVA_APS@

all:
	cdir=`pwd`;\
	for dir in $(PARTS) ; do\
	  echo Making $${dir}; cd $${dir}; make all; cd $$cdir;\
	done

.IGNORE:

clean:
	cdir=`pwd`;\
	for dir in $(PARTS) ; do\
	  cd $${dir} && make -i clean; cd $$cdir;\
	done

depend:
	cdir=`pwd`;\
	for dir in $(PARTS) ; do\
	  cd $${dir}; make depend; cd $$cdir;\
	done

install: 
	cdir=`pwd`;\
	for dir in $(PARTS) ; do\
	  cd $${dir}; make install; cd $$cdir;\
	done
