SHELL=/bin/sh
prefix=@prefix@
top_srcdir=@top_srcdir@
RM=$(top_srcdir)/devscripts/rm_if
JAVADIR = @MAKEJAVADIR@classes
JAVAC = @JAVAC@
JAR = @JAR@
INSTALL=@top_srcdir@/conf/install-sh -c

SOURCES =  Base64.java                   JiNcVarByte.java              NetworkEvent.java             WaveContainerListener.java\
ColorDialog.java              JiNcVarChar.java              NetworkEventListener.java     WaveDisplay.java\
CompositeWaveDisplay.java     JiNcVarDouble.java            NetworkEventManager.java      WaveInterface.java\
DataAccess.java               JiNcVarFloat.java             NetworkProvider.java          WavePopup.java\
DataAccessURL.java            JiNcVarImp.java               NetworkTransferListener.java  Waveform.java\
DataCached.java               JiNcVarInt.java               ProfileDialog.java            WaveformContainer.java\
DataProvider.java             JiNcVarShort.java             RandomAccessData.java         WaveformEvent.java\
DemoProvider.java             JiSlab.java                   RdaAccess.java                WaveformEventListener.java\
FontSelection.java            JiSlabIterator.java           ReaderConfig.java             WaveformListener.java\
Frames.java                   JiVar.java                    RotateFilter.java             WaveformManager.java\
FtuProvider.java              JiVarImpl.java                RowColumnContainer.java       WaveformMetrics.java\
Grid.java                     LocalProvider.java            RowColumnLayout.java          jScope.java\
JetDataProvider.java          MdsAccess.java                SetupDataDialog.java          jScopeDefaultValues.java\
JiDataSource.java             MdsWaveInterface.java         SetupDefaults.java            jScopeMultiWave.java\
JiDim.java                    MultiWavePopup.java           Signal.java                   jScopeWaveContainer.java\
JiNcSource.java               MultiWaveform.java            SignalCache.java              jScopeWavePopup.java\
JiNcVar.java                  NetworTransferListener.java   WaveContainerEvent.java

CLASSES = $(SOURCES:.java=.class)

all:	@MAKEBINDIR@ @MAKEBINDIR@jScope @MAKEJAVADIR@ @MAKEJAVADIR@classes @MAKEJAVADIR@classes/jScope.jar

clean: 
	@ $(RM) *.class
	@ $(RM) @MAKEBINDIR@jScope
	@ $(RM) @MAKEJAVADIR@classes/jScope.jar

depend: ; @ :

install:
	if [ ! -d @exec_prefix@/java/classes ] ; then \
                mkdirhier @exec_prefix@/java/classes ; \
                chmod -R 755 @exec_prefix@/java; \
        fi;
	$(INSTALL) -m 644  @MAKEJAVADIR@classes/jScope.jar @exec_prefix@/java/classes
	$(INSTALL) -m 644  jScope.properties @exec_prefix@/java/classes
	$(INSTALL) -m 755  @MAKEBINDIR@jScope @exec_prefix@/bin

@MAKEJAVADIR@ : ; mkdir @MAKEJAVADIR@

@MAKEJAVADIR@classes : ; mkdir @MAKEJAVADIR@classes

@MAKEJAVADIR@classes/jScope.jar: jScope.class CompositeWaveDisplay.class
	$(JAR) c0f $@ *.class

jScope.class: 	$(SOURCES)
	$(JAVAC) -g jScope.java

CompositeWaveDisplay.class: 	$(SOURCES)
	$(JAVAC) -g CompositeWaveDisplay.java

@MAKEBINDIR@ : ; mkdir @MAKEBINDIR@

@MAKEBINDIR@jScope : jScope.template
	cp jScope.template $@
	chmod a+x $@
